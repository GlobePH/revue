<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cryptonice.revue.ProductInformation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/toolbar"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Product Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_act_prod_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textStyle="normal|bold"
                    android:textColor="#fff" />

                <TextView
                    android:text="Manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_act_prod_mfg"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_marginRight="16dp"
                    android:textColor="#fff" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@color/colorPrimaryDark"
                    android:id="@+id/image_act_1"
                    android:layout_height="130dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        app:srcCompat="@color/colorAccent"
                        android:id="@+id/image_act_2"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        app:srcCompat="@color/colorPrimary"
                        android:id="@+id/image_act_3"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:layout_marginBottom="8dp">

                    <TextView
                        android:text="BUILD AND DESIGN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textAllCaps="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rating_1"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:rating="4.2"
                        android:stepSize=".1"
                        android:max="5" />

                    <TextView
                        android:text="4.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rating_1" />

                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="DURABILITY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="normal|bold"
                            android:textAllCaps="true" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating_2"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:numStars="5"
                            android:rating="4.2"
                            android:stepSize=".1"
                            android:max="5" />

                        <TextView
                            android:text="4.2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_rating_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="PERFORMANCE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="normal|bold"
                            android:textAllCaps="true" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating_3"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:numStars="5"
                            android:rating="4.2"
                            android:stepSize=".1"
                            android:max="5" />

                        <TextView
                            android:text="4.2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_rating_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_rate"
                            android:layout_weight="1"
                            android:layout_marginRight="4dp" />

                        <Button
                            android:text="Give Review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_review"
                            android:layout_weight="1"
                            android:layout_marginLeft="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_prod_about"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:text="comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/list_comments" />

                <Button
                    android:text="VISIT EXTERNAL STORE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_visit"
                    android:layout_margin="16dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginBottom="50dp" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</RelativeLayout>
